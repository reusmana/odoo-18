<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_patients_list_read" model="ir.ui.view">
        <field name="name">hospital.patients.read.list</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" edit="0">
                <field name="name" />
                <field name="date_of_birth" optional="hide" />
                <!-- <field name="gender" optional="hide" /> -->
            </list>
        </field>
    </record>

     <record id="hospital_patient_search_readonly" model="ir.ui.view">
        <field name="name">hospital.patients.search</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="date_of_birth" />
                <field name="gender" />

<!--                filter domain join 
                    if you put | is mean or if not any put | is mean & and
-->
                <field name="name" string="Join name or male"
                
                    filter_domain="['|',('name', 'ilike', self), ('gender', 'ilike', self)]"/>

<!--                 <field name="name" string="Order"-->
<!--                    filter_domain="['|', '|', ('name', 'ilike', self), ('client_order_ref', 'ilike', self), ('partner_id', 'child_of', self)]"/>-->

                <filter name="male_patient" string="male" domain="[('gender', '=', 'male')]" />
                <!-- domain is filter of list base on condition -->
                <separator />
                <filter name="female_patient" string="female" domain="[('gender', '=', 'female')]" />
                <separator />
                <filter name="archive" string="archive" domain="[('active', '=', False)]" />

                <group string="group gender" expand="1" >
                    <filter name="groupby_gender" string="Gender" context="{'group_by' : 'gender'}" />
                </group>

                <searchpanel>
                    <field name="gender" string="Gender" select="multi" icon="fa-filter" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>


    <record id="action_hospital_patients_read" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'list', 'view_id': ref('view_hospital_patients_list_read')})]"/>
        <field name="search_view_id" ref="hospital_patient_search_readonly"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Patients
            </p>
        </field>
    </record>
</odoo>