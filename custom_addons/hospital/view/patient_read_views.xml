<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_patients_list_read" model="ir.ui.view">
        <field name="name">hospital.patients.read.list</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" edit="0">
                <field name="name" />
                <field name="date_of_birth" optional="hide" />
                <!-- <field name="gender" optional="hide" /> -->
            </list>
        </field>
    </record>

    <record id="hospital_patient_search_readonly" model="ir.ui.view">
        <field name="name">hospital.patients.search</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="date_of_birth" />
                <field name="gender" />
            </search>
        </field>
    </record>


    <record id="action_hospital_patients_read" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'list', 'view_id': ref('view_hospital_patients_list_read')})]"/>
        <field name="search_view_id" ref="hospital_patient_search_readonly"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Patients
            </p>
        </field>
    </record>
</odoo>