<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_patients_list_read" model="ir.ui.view">
        <field name="name">hospital.patients.read.list</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <list create="0" delete="0" edit="0">
                <field name="name" />
                <field name="date_of_birth" optional="hide" />
                <field name="gender" optional="hide" />
            </list>
        </field>
    </record>
    <record id="view_hospital_patients_form_Read" model="ir.ui.view">
        <field name="name">hospital.patients.read.form</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <form string="Patients" create="0" delete="0" edit="0">
<!--                sheet for border and margin or padding-->
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_of_birth" />
                        </group>
                        <group>
                            <field name="gender" />
                        </group>
                    </group>
                    <group>
                        <chatter/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hospital_patients_read" model="ir.actions.act_window">
        <field name="name">View Patients</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">list,form</field>
        <field name="view_ids" eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'list', 'view_id': ref('view_hospital_patients_list_read')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_patients_form_Read')})]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Patients
            </p>
        </field>
    </record>
</odoo>