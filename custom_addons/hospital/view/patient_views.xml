<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_hospital_patients_list" model="ir.ui.view">
        <field name="name">hospital.patients.tree</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <list>
                <field name="name" />
                <field name="date_of_birth" optional="hide" />
                <field name="gender" optional="hide" />
            </list>
        </field>
    </record>
    <record id="view_hospital_patients_form" model="ir.ui.view">
        <field name="name">hospital.patients.form</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <form string="Patients">
<!--                sheet for border and margin or padding-->
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="date_of_birth" />
                            <field name="is_minor" />
                            <field name="guardian" invisible="not is_minor" required="is_minor" />
                        </group>
                        <group>
                            <field name="gender" />
                            <field name="weight" />
                            <field name="tag_ids" widget="many2many_tags" />
                        </group>
                    </group>
                    <group>
                        <chatter/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

<!--    custom search-->
    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patients.search</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="date_of_birth" />
                <field name="gender" />

<!--                filter domain join-->
                <field name="name" string="Join name or male"
                    filter_domain="['|',('name', 'ilike', self), ('gender', 'ilike', self)]"/>

<!--                 <field name="name" string="Order"-->
<!--                    filter_domain="['|', '|', ('name', 'ilike', self), ('client_order_ref', 'ilike', self), ('partner_id', 'child_of', self)]"/>-->

                <filter name="male_patient" string="male" domain="[('gender', '=', 'male')]" />
                <separator />
                <filter name="female_patient" string="female" domain="[('gender', '=', 'female')]" />

                <group string="group gender" expand="1" >
                    <filter name="groupby_gender" string="Gender" context="{'group_by' : 'gender'}" />
                </group>

                <searchpanel>
                    <field name="gender" string="Gender" icon="fa-filter" enable_counters="1"/>
                </searchpanel>
            </search>
        </field>
    </record>


    <record id="action_hospital_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">list,form</field>
<!--        this is for clear the content before show the content-->
        <field name="view_ids" eval="[(5, 0, 0),
                      (0, 0, {'view_mode': 'list', 'view_id': ref('view_hospital_patients_list')}),
                      (0, 0, {'view_mode': 'form', 'view_id': ref('view_hospital_patients_form')})]"/>

<!-- this is for ref hospital search -->
        <field name="search_view_id" ref="hospital_patient_search"/>
        <!-- this is for automatic filter by fillter name like search_default_female_patient or  search_default_group -->
        <field name="context">{'search_default_male_patient':1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Patients
            </p>
        </field>
    </record>
</odoo>