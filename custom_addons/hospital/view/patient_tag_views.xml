<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_patients_tags_list" model="ir.ui.view">
        <field name="name">patients.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <list string="Patient Tag" editable="bottom">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="sequence" />
            </list>
        </field>
    </record>

    <record id="action_patient_tags" model="ir.actions.act_window">
        <field name="name">Patients Tags</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Tags
            </p>
        </field>
    </record>
</odoo>