<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_patients_tags_list" model="ir.ui.view">
        <field name="name">patients.tag.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
        <!-- editable like just not need form for add or edit the list -->
            <list string="Patient Tag" editable="bottom" sample="1">
            <!-- sample is true mean add sample when list is empty -->
                <!-- sequece is order number for handle widget=handle is kanban, can drag -->
                <field name="sequence" widget="handle" /> 

                <field name="name" />
                <field name="color" widget="color_picker" />
                <field name="sequence" />
            </list>
        </field>
    </record>

    <record id="action_patient_tags" model="ir.actions.act_window">
        <field name="name">Patients Tags</field>
        <field name="res_model">patient.tag</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create New Tags
            </p>
        </field>
    </record>
</odoo>