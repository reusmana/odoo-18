<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="cancel_appointment_form" model="ir.ui.view">
        <field name="name">cancel.appointment.wizard.form</field>
        <field name="model">cancel.appointment.wizard</field>
        
        <field name="arch" type="xml">
        <form string="Cancel">
            <sheet>
                <group>
                <!-- invisible if hide context is true -->
                <!-- you can put domain in here. or in model, up to you -->
                    <field name="appointment_id" invisible="context.get('hide_appointment_id')" widget="selection" />
                    <!-- <field name="appointment_id" invisible="context.get('hide_appointment_id')"
                    domain=[('state', '=', 'draft')]
                    /> -->
                    <field name="reason"/>
                </group>
                <group>
                    <field name="date_cancel"/>
                </group>

                
            </sheet>
             <footer>
                <button name="action_cancel_appointment_func" string="Cancel Appointment" type="object" class="btn-primary"/>
                <button string="Discard" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
        </field>
    </record>

    <record id="action_cancel_appointment" model="ir.actions.act_window">
        <field name="name">Cancel Appointment</field>
        <field name="res_model">cancel.appointment.wizard</field>
        <field name="view_mode">form</field>
        <!-- for popup targer is new -->
        <field name="target">new</field> 
    </record>
</odoo>