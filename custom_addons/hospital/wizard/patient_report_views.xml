<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="patient_report_wizard_form" model="ir.ui.view">
        <field name="name">patient.report.wizard.form</field>
        <field name="model">patient.report.wizard</field>

        <field name="arch" type="xml">
        <form string="Patient Report">
            <sheet>
                <group>
                    <field name="start_date" />
                </group>
                <group>
                    <field name="end_date" />
                </group>
            </sheet>
             <footer>
                <button name="action_print_report" string="Print Report" type="object" class="btn-primary"/>
                <!-- special is close the wizard or popup without saving or any action -->
                <button string="Discard" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
        </field>
    </record>

    <record id="action_patient_report_wizard" model="ir.actions.act_window">
        <field name="name">Patient Report Wizard</field>
        <field name="res_model">patient.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field> 
        <!-- <field name="target">current</field> -->
    </record>
    

    <!-- <menuitem id="menu_patient_report_wizard"
              name="Patient Report"
              parent="hospital.menu_hospital_root"
              action="action_patient_report_wizard"/> -->
</odoo>