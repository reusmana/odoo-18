<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_report_hospital_patient" model="ir.actions.report">
        <field name="name">Hospital Report</field>
        <field name="model">hospital.patients</field>
        <field name="report_type">qweb-pdf</field>

        <!-- report name -->
        <field name="report_name">hospital.report_hospital_patient</field>
        <field name="report_file">hospital.report_hospital_patient</field>

        <!-- this is if true then preview pdf not show  -->
        <field name="multi">True</field> 

        <!-- name of pdf -->
        <field name="print_report_name">'Hospital Patient Report'</field>
        <field name="binding_model_id" ref="hospital.model_hospital_patients"/>
        <field name="binding_type">report</field>
    </record>

</odoo>

