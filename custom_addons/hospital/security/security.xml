<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
    <!-- module category 
    Ini membuat kategori baru bernama Hospital, yang akan muncul di tab pengaturan hak akses.
    -->
        <record id="module_category_hospital" model="ir.module.category" >
            <field name="name">Hospital</field>
            <field name="sequence">5</field>
        </record>

         <record id="group_hospital_receptionist" model="res.groups">
            <field name="name">Receptionist</field>
            <field name="category_id" ref="hospital.module_category_hospital"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to appointment.</field>
        </record>


        <record id="group_hospital_doctors" model="res.groups">
            <field name="name">Doctors</field>
            <field name="category_id" ref="hospital.module_category_hospital"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">the user will have access to patient details.</field>
        </record>

<!--        this is spesifikation record rule-->
        <record id="receptionist_own_rule" model="ir.rule">
            <field name="name">Receptionist : view own record</field>
            <field name="model_id" ref="hospital.model_hospital_appointment"/>
            <field name="groups" eval="[(4, ref('hospital.group_hospital_receptionist'))]"/>
<!--            this is user can see the appoitnmen if the data create by self-->
            <field name="domain_force">[('create_uid', '=', user.id)]</field>

<!--            <field name="perm_unlink" eval="True"/>-->
<!--            <field name="perm_write" eval="True"/>-->
<!--            <field name="perm_read" eval="True"/>-->
<!--            <field name="perm_create" eval="False"/>-->
        </record>

        <record id="doctor_all_rule" model="ir.rule">
            <field name="name">Doctor : view all record</field>
            <field name="model_id" ref="hospital.model_hospital_appointment"/>
            <field name="groups" eval="[(4, ref('hospital.group_hospital_doctors'))]"/>
            <field name="domain_force">[]</field>
        </record>
    </data>
</odoo>