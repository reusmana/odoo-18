<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_dashboard.OwlSalesDashboard" owl="1">
        <div class="vh-100 overflow-auto bg-muted">
            <header>
                <button t-on-click="openActivity" class="btn btn-primary m-3">
                    <span class="fa fa-bars"></span>
                    Open Activities
                </button>
            </header>
            <div class="row m-3">
                <div class="col-lg-7">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h1 class="text-primary fw-bold">Custom Sales Dashboard</h1>
                                    <div>
                                        <select class="form-select" t-model="state.period" t-on-change="onChangePeriod">
                                            <option value="7">Last 7 Days</option>
                                            <option value="30">Last 30 Days</option>
                                            <option value="90">Last 90 Days</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <KPICard name="'Quotations'" value="state.quotation.value" percentage="state.quotation.percentage" /> 
                        <KPICard name="'Orders'" value="10" percentage="30" /> 
                        <KPICard name="'Revenues'" value="20" percentage="30" /> 
                        <KPICard name="'Average Orders'" value="10" percentage="30" /> 
                    </div>
                    <div class="row">
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Products </h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"></span>
                                    </div>
                                </div>
                                <ChartRender type="'doughnut'" title="'Top Products'" />
                            </div>
                        </div>
                        <div class="col-lg-6 m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Top Sales People </h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"></span>
                                    </div>
                                </div>
                                <ChartRender type="'pie'" title="'Top Sales People'" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Monthly Sales</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"></span>
                                    </div>
                                </div>
                                <ChartRender type="'line'" title="'Monthly Sales'"/>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col m-0 p-0">
                            <div class="shadow-sm border m-2 p-4 bg-white">
                                <div class="d-flex align-items-center justify-content-between">
                                    <h3 class="text-primary fw-bold">Partner Odoo</h3>
                                    <div class="px-3 py-1 bg-primary cursor-pointer">
                                        <span class="fa fa-arrow-right text-white"></span>
                                    </div>
                                </div>
                                <ChartRender type="'bar'" title="'Partner Odoo'" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>